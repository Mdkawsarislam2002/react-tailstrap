{
  "name": "react-tailstrap",
  "description": "react-tailstrap is a tailwindcss library that builds with tailwindcss but that have all bootstrap component it means you can use Bootstrap components into your tailwindcss projects",
  "author": {
    "name": "Md kawsar Islam Yeasin",
    "email": "mdkawsarislam2002@gmail.com"
  },
  "keywords": [
    "react",
    "react-component",
    "components",
    "tailwindcss",
    "tailstrap",
    "design system",
    "tailwind component",
    "ecosystem-react",
    "bootstrap"
  ],
  "version": "0.1.3",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Mdkawsarislam2002/react-tailstrap"
  },
  "bugs": {
    "url": "https://github.com/Mdkawsarislam2002/react-tailstrap/issues"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16",
    "tailwindcss": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/react-tailstrap.esm.js",
  "size-limit": [
    {
      "path": "dist/react-tailstrap.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-tailstrap.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.13",
    "husky": "^8.0.1",
    "postcss": "^8.4.18",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4"
  }
}
